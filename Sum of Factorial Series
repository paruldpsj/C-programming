#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

long long fact(int n){
    if(n==1)
        return 1;
    return n*fact(n-1);
}
long long sum(int n){
    if(n==1)
        return 1;
    return fact(n)+ sum(n-1);
}
int main() {
    int n;
    scanf("%d", &n);
    printf("%lld", sum(n));

       
    return 0;
}
