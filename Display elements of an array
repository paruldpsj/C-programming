#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int n, i, j, y, z=0;
    
    scanf("%d", &n);
    y= n+(n-1);
    for(j=1; j<=n; j++){
        for(i=1; i<=y; i++){
            if(i>=(n-z) && i<=(n+z)) {
                printf("* ");
            }
            else{
                printf("  ");
            }
         
        }
        z++;
        printf("\n");
    }
    return 0;
}
